protocol ahb128

  ports 
    data    in 32 haddr
    control in 2 htrans
    control in 1 hwrite 
    control in 3 hsize # need to implement. only passthrough but still needs map.
    control in 1 hburst
    data    in 128 hwdata

    data    out 128 hrdata
    control out 1 hready
    control out 1 hresp # need to implement
  endports 

  map hburst begin
    0 : 0
    1 : 3
    2 : 7
    3 : 15
  end

  map hsize begin
    0 : 8
    1 : 16
    2 : 32
    3 : 64
    4 : 128
    5 : 256
    6 : 512
    7 : 1024
  end

  behavior
    generate itr = hburst : 0 begin
    + @(hready(1), htrans(2)) { rec( haddr(offset=16, id=itr) ) }
    end
  endbehavior

  behavior
    generate itr = hburst : 0 begin
    + @(hready(1), htrans(2), hwrite(1)) { rec( hwdata(range=128, id=itr, dep=haddr(itr)) ) }
    end 
  endbehavior

  behavior
    generate itr = hburst : 0 begin
    + @(hready(1), htrans(2), hwrite(0)) { send( hrdata(range=128, id=itr, dep=haddr(itr)) ) }
    end
  endbehavior

endprotocol
